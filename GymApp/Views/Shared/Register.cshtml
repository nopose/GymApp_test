@model NewUser

<div class="card card-register mx-auto mt-5">
    <div class="card-header">Register an Account</div>
    <div class="card-body">
        @using (Html.BeginForm("Register", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label for="exampleInputName">First name</label>
                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", type = "text", aria_describedby = "nameHelp", placeholder = "Enter first name" })
                    </div>
                    <div class="col-md-6">
                        <label for="exampleInputLastName">Last name</label>
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", type = "text", aria_describedby = "nameHelp", placeholder = "Enter last name" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", type = "email", aria_describedby = "emailHelp", placeholder = "Enter email" })
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label for="exampleInputPassword1">Password</label>
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password", aria_describedby = "emailHelp", placeholder = "Password" })
                    </div>
                    <div class="col-md-6">
                        <label for="exampleConfirmPassword">Confirm password</label>
                        @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", type = "password", aria_describedby = "emailHelp", placeholder = "Confirm password" })
                    </div>
                </div>
            </div>
            <input class="btn btn-primary btn-block" type="submit" value="Register"/>
        }
        <div class="text-center">
            <a class="d-block small mt-3" href="login.html">Login Page</a>
            <a class="d-block small" href="forgot-password.html">Forgot Password?</a>
        </div>
    </div>
</div>
